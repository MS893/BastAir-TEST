<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for(:title) || "Bast Air" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Ajout de la bibliothèque d'icônes Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    




    <!-- Chargement du thème Zephyr (qui inclut Bootstrap) depuis le CDN de Bootswatch -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/zephyr/bootstrap.min.css">





    <!-- Chargement de nos styles personnalisés, qui peuvent surcharger le thème -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- Ajout de Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= javascript_importmap_tags %>
    <%= yield :head %>
  </head>

  <body class="d-flex flex-column min-vh-100">

    <%= render 'layouts/navbar' %>
    <main class="main-content flex-grow-1 d-flex flex-column">
      <%= render 'layouts/flash' %>
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>

    <script type="module">
      // Initialise tous les composants Bootstrap qui utilisent data-bs-dismiss (comme les alertes)
      const alertList = document.querySelectorAll('.alert');
      alertList.forEach(alert => new bootstrap.Alert(alert));
    </script>

    <script>
      document.addEventListener('turbo:load', () => {
        // Met à jour l'année du copyright dynamiquement
        document.querySelectorAll('.current-year').forEach(span => {
          span.textContent = new Date().getFullYear();
        });

        const themeToggleSwitch = document.getElementById('theme-toggle');
        if (!themeToggleSwitch) return;

        const htmlElement = document.documentElement;

        const applyTheme = (theme) => {
          htmlElement.setAttribute('data-bs-theme', theme);
          localStorage.setItem('theme', theme);
          // Met à jour l'état du switch : coché si le thème est sombre
          themeToggleSwitch.checked = theme === 'dark';
        };

        const savedTheme = localStorage.getItem('theme') || 'light';
        applyTheme(savedTheme);

        // On utilise l'événement 'change' pour le switch
        themeToggleSwitch.addEventListener('change', () => {
          const newTheme = themeToggleSwitch.checked ? 'dark' : 'light';
          applyTheme(newTheme);
        });
      });
    </script>

  </body>
</html>
