<div class="row justify-content-center mt-5">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <h2 class="card-title text-center mb-4">Créer un nouvel utilisateur</h2>

        <%= form_with(model: [:admin, @user], local: true) do |f| %>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :prenom, class: "form-label" %>
              <%= f.text_field :prenom, class: "form-control" %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label :nom, class: "form-label" %>
              <%= f.text_field :nom, class: "form-control" %>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>

          <div class="mb-3 form-check">
            <%= f.check_box :admin, class: "form-check-input" %>
            <%= f.label :admin, "Administrateur ?", class: "form-check-label" %>
          </div>

          <div class="d-grid">
            <%= f.submit "Créer l'utilisateur", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
