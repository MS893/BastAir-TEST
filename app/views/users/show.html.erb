<% content_for :title, "Accueil pilote #{@user.prenom} #{@user.nom}" %>

<div class="container my-5">
  <div class="row">
    <div class="col-md-4 text-center">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, class: "img-fluid rounded-circle mb-3", style: "width: 150px; height: 150px; object-fit: cover;" %>
      <% else %>
        <div class="avatar-placeholder mb-3" style="width: 150px; height: 150px; background-color: #e9ecef; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center;">
          <i class="bi bi-person-fill" style="font-size: 4rem; color: #adb5bd;"></i>
        </div>
      <% end %>
      <h2 class="mb-1"><%= @user.prenom %> <%= @user.nom %></h2>
      <p class="text-muted"><%= @user.email %></p>
      <% if @user.admin? %>
        <span class="badge bg-primary">Administrateur</span>
      <% end %>
    </div>

    <div class="col-md-8">
      <h3>Informations de l'adhérent</h3>
      <hr>
      <p><strong>Fonction :</strong> <%= @user.fonction.capitalize %></p>
      <p><strong>Téléphone :</strong> <%= @user.telephone %></p>
      <p><strong>Adresse :</strong> <%= @user.adresse %></p>
      <p><strong>Solde du compte :</strong> <%= number_to_currency(@user.solde, unit: "€", separator: ",", delimiter: " ", format: "%n %u") %></p>
      
      <%# --- BOUTONS D'ACTION --- %>
      <div class="mt-4">
        <% if current_user == @user %>
          <%= link_to "Modifier mon profil", edit_user_registration_path, class: "btn btn-primary" %>
        <% end %>

        <%# Menu de gestion visible uniquement pour les administrateurs %>
        <% if current_user.admin? %>
          <div class="dropdown d-inline-block ms-2">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="adminMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-gear-fill"></i> Gestion
            </button>
            <ul class="dropdown-menu" aria-labelledby="adminMenuButton">
              <li><%= link_to '<i class="bi bi-journal-text me-2"></i>Afficher les comptes'.html_safe, transactions_path, class: "dropdown-item" %></li>
              <li><%= link_to '<i class="bi bi-plus-circle me-2"></i>Saisir une transaction'.html_safe, new_transaction_path, class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to '<i class="bi bi-person-plus me-2"></i>Créer un nouvel adhérent'.html_safe, new_admin_user_path, class: "dropdown-item" %></li>
              <li><%= link_to '<i class="bi bi-server me-2"></i>Gérer les tables (BDD)'.html_safe, "#", class: "dropdown-item disabled" %></li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>