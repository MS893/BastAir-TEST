<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card profile-card border-0 shadow-lg">
        <div class="card-body text-center p-4 p-md-5">
          
          <%= image_tag @user.avatar.attached? ? @user.avatar : 'https://via.placeholder.com/120', class: "profile-avatar rounded-circle mb-4" %>

          <h2 class="card-title mb-1"><%= @user.name %></h2>
          <p class="text-muted mb-4"><%= @user.email %></p>

          <hr class="my-4">

          <div class="profile-details text-start">
            <p><strong>Pr√©nom:</strong> <%= @user.prenom %></p>
            <p><strong>Nom:</strong> <%= @user.nom %></p>
          </div>

          <%# On affiche le bouton "Modifier" seulement si l'utilisateur consulte son propre profil %>
          <% if current_user == @user %>
            <%= link_to "Modifier mon profil", edit_user_registration_path, class: "btn btn-primary mt-4" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
