<div class="card h-100 shadow">
  <div class="card-header bg-primary text-white">
    <h5 class="card-title mb-0">
      <i class="fas fa-calendar-check me-2"></i>Mes validités
    </h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>SEP</span>
      <strong class="<%= (user.date_licence.present? && user.date_licence < Date.today) ? 'text-danger' : 'text-body-secondary' %>">
        <%= user.date_licence ? l(user.date_licence, format: :long) : 'N/A' %>
      </strong>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>Visite Médicale (<%= user.type_medical || 'N/A' %>)</span>
      <strong class="<%= (user.medical.present? && user.medical < Date.today) ? 'text-danger' : 'text-body-secondary' %>">
        <%= user.medical ? l(user.medical, format: :long) : 'N/A' %>
      </strong>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>Contrôle en vol</span>
      <strong class="<%= (user.controle.present? && user.controle < Date.today) ? 'text-danger' : 'text-body-secondary' %>">
        <%= user.controle ? l(user.controle, format: :long) : 'N/A' %>
      </strong>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>Cotisation club</span>
      <strong class="<%= (user.cotisation_club.present? && user.cotisation_club < Date.today) ? 'text-danger' : 'text-body-secondary' %>">
        <%= user.cotisation_club ? l(user.cotisation_club, format: :long) : 'N/A' %>
      </strong>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>LIcence FFA</span>
      <strong class="<%= (user.cotisation_ffa.present? && user.cotisation_ffa < Date.today) ? 'text-danger' : 'text-body-secondary' %>">
        <%= user.cotisation_ffa ? l(user.cotisation_ffa, format: :long) : 'N/A' %>
      </strong>
    </li>
  </ul>
</div>
