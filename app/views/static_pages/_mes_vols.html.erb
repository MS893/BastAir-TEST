<div class="card h-100 shadow">
  <div class="card-header bg-primary text-white">
    <h5 class="card-title mb-0">
      <i class="fas fa-calendar-check me-2"></i>Mes vols
    </h5>
  </div>
  <div class="d-grid gap-2">
    <%= link_to "Voir les signalements", signalements_path, class: "btn btn-outline-primary mt-3 ms-4 me-4" %>
    <%= link_to "Retour de vol", new_vol_path, class: "btn btn-success mt-3 ms-4 me-4 fw-bold" %>
    <%= link_to "Mes derniers vols", vols_user_path(current_user.id), class: "btn btn-outline-primary ms-4 me-4" %>
