    <div class="col-md-6 col-lg-5">
      <div class="card h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><i class="bi bi-airplane me-2"></i>Prochain vol</h5>

          <% if @next_reservation %>

            <div class="flex-grow-1">
              <p class="card-text mb-1"><strong>Avion :</strong> <%= @next_reservation.avion.nom %></p>
              <p class="card-text mb-1"><strong>Le :</strong> <%= l(@next_reservation.date_debut, format: :long) %></p>
              <p class="card-text"><strong>À :</strong> <%= l(@next_reservation.date_debut, format: :short_time) %></p>
              <p class="card-text mb-1"><strong>Le :</strong> <%= l(@next_reservation.date_debut, format: :long) %> à <%= l(@next_reservation.date_debut, format: :short_time) %></p>
            </div>
            <%= link_to "Voir mes réservations", '#', class: "btn btn-outline-primary mt-auto" %>

          <% else %>

            <p class="card-text text-muted flex-grow-1">Aucun vol programmé.</p>

          <% end %>
          
          <div class="btn-group w-100 mb-3">
            <%= link_to "Mes réservations", '#', class: "btn btn-outline-primary mt-auto" %>
            <%= link_to "Agenda avion", agenda_avion_path, class: "btn btn-outline-primary mt-auto" %>
            <%= link_to "Agenda instructeurs", agenda_instructeurs_path, class: "btn btn-outline-primary mt-auto" %>
          </div>

          <% if @next_reservation %>
            <%= link_to "Gérer mes réservations", '#', class: "btn btn-primary mt-auto" %>
          <% else %>
            <%= link_to "Réserver un vol", '#', class: "btn btn-primary mt-auto" %>
          <% end %>

        </div>
      </div>
    </div>
