<div class="row justify-content-center mt-5">

  <!-- Bannière "Accès adhérents" -->
  <div class="col-12 text-center mb-5">
    <div class="p-2 border border-primary rounded d-inline-block">
      <h1 class="fw-light text-primary mb-0">Accès réservé aux adhérents</h1>
    </div>
  </div>

  <div class="col-11 col-sm-9 col-md-6 col-lg-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="card-title text-center mb-4">Se connecter</h3>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Mot de passe", class: "form-label" %>
            <div class="input-group" data-controller="password-toggle">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", data: { password_toggle_target: "input" } %>
              <button class="btn btn-outline-secondary" type="button" data-action="click->password-toggle#toggle" aria-label="Afficher ou masquer le mot de passe">
                <i class="bi bi-eye-slash" data-password-toggle-target="icon"></i>
              </button>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-flex justify-content-center my-3">
            <%= recaptcha_tags %> <%# captcha de Google (je ne suis pas un robot) %>
          </div>

          <div class="d-grid">
            <%= f.submit "Se connecter", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <br>
    <br>
    <br>
    <br>

    <!-- Bannière "Contactez-nous" -->
    <div class="text-center mt-4">
      <p class="text-muted">Vous n'êtes pas encore membre ?</p>
      <%= link_to "Contactez-nous pour vous inscrire", contact_path, class: "btn btn-outline-primary" %>
    </div>

  </div>
</div>