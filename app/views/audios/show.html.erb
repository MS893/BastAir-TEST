<% content_for :title, @audio.title %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><%= @audio.title %></h1>
        <%= link_to "Retour à la médiathèque", cours_theoriques_path, class: "btn btn-outline-secondary" %>
      </div>
      <p class="lead"><%= @audio.description %></p>
      <hr>

      <% if @audio.audio.attached? %>
        <div class="card">
          <div class="card-body text-center">
            <audio controls class="w-100">
              <source src="<%= url_for(@audio.audio) %>" type="<%= @audio.audio.content_type %>">
              Votre navigateur ne supporte pas l'élément audio.
            </audio>
          </div>
        </div>
      <% else %>
        <div class="alert alert-warning text-center" role="alert">
          Aucun fichier audio n'est disponible pour ce audio.
        </div>
      <% end %>
    </div>
  </div>
</div>
