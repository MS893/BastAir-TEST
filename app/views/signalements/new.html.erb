<% content_for :title, "Signaler une anomalie" %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h3 class="text-center mb-4">
            <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
            Signaler une anomalie sur <%= @avion.immatriculation %>
          </h3>

          <%= form_with(model: [@avion, @signalement], local: true) do |form| %>
            <% if @signalement.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@signalement.errors.count, "erreur") %> a empêché le signalement :</h5>
                <ul>
                  <% @signalement.errors.full_messages.each { |msg| content_tag(:li, msg) } %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :description, "Veuillez décrire l'anomalie constatée avec le plus de détails possible :", class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 6, required: true %>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <%= link_to "Annuler", :back, class: "btn btn-secondary" %>
              <%= form.submit "Envoyer le signalement", class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
