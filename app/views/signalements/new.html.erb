<% content_for :title, "Signaler une anomalie" %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h3 class="text-center mb-4">
            <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
            Signaler une anomalie sur <%= @avion.immatriculation %>
          </h3>

        <div class="card-body">
          <%# On lie le contrôleur Stimulus au formulaire %>
          <%= simple_form_for [@avion, @signalement], 
                              html: { 
                                data: { 
                                  action: "submit->offline-form#submit", 
                                  offline_form_target: "form",
                                  avion_id: @avion.id 
                                } 
                              } do |f| %>
            <%= f.input :description, as: :text, rows: 5, label: "Description du problème" %>
            <%= f.button :submit, "Envoyer le signalement", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
