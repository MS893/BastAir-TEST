<% content_for :title, @course.title %>

<div class="container-fluid my-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><%= @course.title %></h1>
        <%= link_to "Retour à la liste des cours", cours_theoriques_path, class: "btn btn-outline-primary" %>
      </div>
      <p class="lead"><%= @course.description %></p>
      <hr>

      <% if @course.document.attached? %>
        <%# Affiche le document dans un iframe. Fonctionne bien pour les PDF. %>
        <%# Les navigateurs peuvent télécharger les fichiers PPT au lieu de les afficher. %>
        <div class="ratio ratio-4x3">
          <iframe src="<%= url_for(@course.document) %>" title="<%= @course.title %>" allowfullscreen></iframe>
        </div>
      <% else %>
        <div class="alert alert-warning text-center" role="alert">
          Aucun document n'est disponible pour ce cours.
        </div>
      <% end %>
    </div>
  </div>
</div>
